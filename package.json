{
  "name": "banyan-erp",
  "version": "1.0.0",
  "private": true,
  "description": "Banyan ERP System - A full-stack React + NestJS application",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=web",
    "dev:backend": "turbo start:dev --filter=backend",
    "start:backend": "turbo start --filter=backend",
    "lint": "turbo lint",
    "format": "biome format --write .",
    "check": "biome check --apply .",
    "type-check": "turbo type-check",
    "docs:generate": "typedoc --options typedoc.json",
    "docs:build": "typedoc --options typedoc.json",
    "docs:serve": "pnpm docs:generate && npx http-server docs -p 8080",
    "docs:clean": "rimraf docs"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.1",
    "@microsoft/tsdoc": "^0.15.1",
    "concurrently": "^9.2.1",
    "http-server": "^14.1.1",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.8",
    "typedoc": "^0.28.13",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.0.4"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.12.0"
  }
}